include ../../../base/forms/form_1/form/index

.form-ordering.lk-form
  .form-ordering__inner
    form#form-ordering.form-1(name='form_ordering', method='post', target='_top', action='/')
      fieldset.fieldset
        .row
          .col-12
            // row
            .form-group.control-group
              .text.col-12
                .input-wrap
                  input#form_ordering_FIO.form-control.input-with-icon.input-with-icon--human(type='text', name='form_ordering_FIO', placeholder='Имя и фамилия', value='', required='')
              .controls.col-12
          .col-12
            // row
            .form-group.control-group
              .text.col-12
                .input-wrap
                  input#form_ordering_MAIL.form-control.input-with-icon.input-with-icon--email(type='email', name='form_ordering_MAIL', placeholder='Электронная почта', value='', required='')
              .controls.col-12
          .col-12
            // row
            .form-group.control-group
              .text.col-12
                .input-wrap
                  input#form_ordering_TEL.form-control.js_mask_tel.input-with-icon.input-with-icon--tel(type='tel', name='form_ordering_TEL', placeholder='Номер телефона', value='', required='')
              .controls.col-12
          .col-12
            // row
            .form-group.control-group
              .text.col-12
                .input-wrap
                  input#form_ordering_PASS.form-control.input-with-icon.input-with-icon--pass(type='password', name='form_ordering_PASS', placeholder='Введите пароль', value='', required='')
              .controls.col-12
          .col-12
            // row
            .form-group.control-group
              .text.col-12
                .input-wrap
                  input#form_ordering_NEWPASS.form-control.input-with-icon.input-with-icon--pass(type='password', name='form_ordering_NEWPASS', placeholder='Повторите пароль', value='', required='')
              .controls.col-12
          .col-12
            // row
            .form-group.mb-0
              .col-12.btn-wrap
                +btn-primary({
                    type: 'button',
                    className: 'btn_submit with-icon icon-right toReg',
                    text: '<span>зарегистрироваться</span><span class="icon"></span>'
                })(id='form-ordering-submit')
          .col-12.info-wrap
            .form-group.control-group.mb-0
              .text.col-12
                .checkbox
                  label
                    input.ui-checkbox(type='checkbox')
                    span Подписаться на новости и скидки, чтобы в числе первых узнавать о новинках, трендах и специальных предложениях.
              .controls.col-12
            .form-group.control-group
              .text.col-12
                .categories__checkbox.checkbox
                  label
                    input.ui-checkbox(type='checkbox')
                    span Нажимая на кнопку “Зарегистрироваться”, Вы принимаете условия <a href="#">Политики конфиденциальности</a>
              .controls.col-12
    script.
        !function () {
            'use strict';

            // Form validation
            function initValid() {
                // Validation options http://jqueryvalidation.org/documentation/
                var form_validator = $('#form-ordering');
                if (form_validator.length && $.fn.validate) {
                    form_validator.validate({
                        rules: {
                            'form_ordering_FIO': {
                                required: true,
                                minlength: 2
                            },
                            'form_ordering_MAIL': {
                                required: true
                            },
                            'form_ordering_TEL': {
                                required: true
                            },
                            'form_ordering_PASS': {
                                required: true
                            },
                            'form_ordering_NEWPASS': {
                                required: true
                            }
                        }
                    });
                }
            }

            function validOnButton() {
                var form = $('#form-ordering');
                var btn = $('#form-ordering-submit');

                btn.on('click', function () {
                    if (form.valid()) {
                        form.submit();
                    }
                })
            }

            $(function () {
                initValid();
                validOnButton();
            });
        }();