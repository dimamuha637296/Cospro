include ../../../base/forms/form_1/form/index
.form-registration
  .form-registration__inner
    form#form-registration.form-1(name='form_registration', method='post', target='_top', action='/')
      fieldset.fieldset
        .row
          .col-12
            // row
            .form-group.control-group
              .text.col-12
                .input-wrap
                  input#form_registration_FIO.form-control.input-with-icon.input-with-icon--human(type='text', name='form_registration_FIO', placeholder='Имя и фамилия', value='', required='')
              .controls.col-12
          .col-md-6.col-12
            // row
            .form-group.control-group
              .text.col-12
                .input-wrap
                  input#form_registration_MAIL.form-control.input-with-icon.input-with-icon--email(type='email', name='form_registration_MAIL', placeholder='Электронная почта', value='', required='')
              .controls.col-12
          .col-md-6.col-12
            // row
            .form-group.control-group
              .text.col-12
                .input-wrap
                  input#form_registration_TEL.form-control.js_mask_tel.input-with-icon.input-with-icon--tel(type='tel', name='form_registration_TEL', placeholder='Номер телефона', value='', required='')
              .controls.col-12
          .col-md-6.col-12
            // row
            .form-group.control-group
              .text.col-12
                .input-wrap
                  input#form_registration_PASS.form-control.input-with-icon.input-with-icon--pass(type='password', name='form_registration_PASS', placeholder='Введите пароль', value='', required='')
              .controls.col-12
          .col-md-6.col-12
            // row
            .form-group.control-group
              .text.col-12
                .input-wrap
                  input#form_registration_NEWPASS.form-control.input-with-icon.input-with-icon--pass(type='password', name='form_registration_NEWPASS', placeholder='Повторите пароль', value='', required='')
              .controls.col-12
          .col-12
            // row
            .form-group.mb-0
              .col-12.btn-wrap
                +btn-primary({type: 'button', className: 'btn_submit', text: 'зарегистрироваться'})(id='form-registration-submit')
    script.
        !function () {
            'use strict';

            // Form validation
            function initValid() {
                // Validation options http://jqueryvalidation.org/documentation/
                var form_validator = $('#form-registration');
                if (form_validator.length && $.fn.validate) {
                    form_validator.validate({
                        rules: {
                            'form_registration_FIO': {
                                required: true,
                                minlength: 2
                            },
                            'form_registration_MAIL': {
                                required: true
                            },
                            'form_registration_TEL': {
                                required: true
                            },
                            'form_registration_PASS': {
                                required: true
                            },
                            'form_registration_NEWPASS': {
                                required: true
                            }
                        }
                    });
                }
            }

            function validOnButton() {
                var form = $('#form-registration');
                var btn = $('#form-registration-submit');

                btn.on('click', function () {
                    if (form.valid()) {
                        form.submit();
                    }
                })
            }

            $(function () {
                initValid();
                validOnButton();
            });
        }();