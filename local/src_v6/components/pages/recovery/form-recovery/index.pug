include ../../../base/forms/form_1/form/index

.form-recovery.lk-form
  .form-recovery__inner
    form#form-recovery.form-1(name='form_recovery', method='post', target='_top', action='/')
      fieldset.fieldset
        .row
          .col-12
            // row
            .form-group.control-group
              .text.col-12
                .input-wrap
                  input#form_recovery_TELMAIL.form-control.input-with-icon.input-with-icon--email(type='text', name='form_recovery_TELMAIL', placeholder='Электронная почта или номер телефона', value='', required='')
              .controls.col-12
          .col-12
            // row
            .form-group.mb-0
              .col-12.btn-wrap
                +btn-primary({
                    type: 'button',
                    className: 'btn_submit',
                    text: '<span class="d-none d-md-block">отправить код восстановления</span><span class="d-block d-md-none">получить код</span>'
                })(id='form-recovery-submit')
    script.
        !function () {
            'use strict';

            // Form validation
            function initValid() {
                // Validation options http://jqueryvalidation.org/documentation/
                var form_validator = $('#form-recovery');
                if (form_validator.length && $.fn.validate) {
                    form_validator.validate({
                        rules: {
                            'form_recovery_FIO': {
                                required: true,
                                minlength: 2
                            }
                        }
                    });
                }
            }

            function validOnButton() {
                var form = $('#form-recovery');
                var btn = $('#form-recovery-submit');

                btn.on('click', function () {
                    if (form.valid()) {
                        form.submit();
                    }
                })
            }

            $(function () {
                initValid();
                validOnButton();
            });
        }();